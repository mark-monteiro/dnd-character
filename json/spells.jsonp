---
---
spells([
{% for spell in site.spells %}
   {
      "name": "{{ spell.name }}",
      "value": "{{ spell.name }}"
   } {% unless forloop.last %},{% endunless %}
{% endfor %}
]);

{% for level in (0..9) %}
   level-{{level}}-spells([
   {% for spell in site.spells | where: "level", level %}
      {
         "name": "{{ spell.name }}",
         "value": "{{ spell.name | slugify }}"
      } {% unless forloop.last %},{% endunless %}
   {% endfor %}
   ]);
{% endfor %}
